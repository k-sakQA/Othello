{
  "max_iterations": 10,
  "default_browser": "chromium",
  "timeout_seconds": 60,
  "paths": {
    "reports": "./reports",
    "logs": "./logs",
    "test_instructions": "./test-instructions",
    "results": "./test-results"
  },
  "playwright_agent": {
    "api_endpoint": "http://localhost:8931"
  },
  "claude_api": {
    "model": "claude-sonnet-4-20250514",
    "max_tokens": 4096
  },
  "coverage_threshold": {
    "target_percentage": 80,
    "check_improvement": true
  },
  "retry_policy": {
    "max_retries": 3,
    "backoff_strategy": "exponential"
  }
}